generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  passwordHash String
  createdAt    DateTime  @default(now())
  watchlist    WatchlistItem[]
}

model WatchlistItem {
  userId    Int
  imdbId    String
  title     String
  poster    String?
  year      String
  type      String
  rated     String?
  genre     String
  plot      String
  director  String
  actors    String

  // Raw strings from OMDb for display/debug
  imdbRaw   String?   // e.g. "8.7/10"
  rtRaw     String?   // e.g. "95%"
  mcRaw     String?   // e.g. "82/100"

  // Normlized numeric columns for sorting/filtering
  imdbScore   Float?
  rtScore     Int?
  mcScore     Int?

  // Average of the 3 available scores
  sortScore   Float?

  createdAt   DateTime  @default(now())

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, imdbId])
  @@index([userId, createdAt])
  @@index([userId, imdbScore])
  @@index([userId, rtScore])
  @@index([userId, mcScore])
  @@index([userId, sortScore])
}